                       [% END %]
	           [% ELSE %]
	                [% PERL %]
	                     print C4::AR::Filtros::action_set_button(    
	                             title           => '[% " Prestar" | i18n %]',
	                             button          => 'btn btn-success',
	                             action          => 'buscarUsuario([% nivel3.id2 %],[% nivel3.id %])', 
	                             icon            => "icon-repeat icon-white",
	                         );
