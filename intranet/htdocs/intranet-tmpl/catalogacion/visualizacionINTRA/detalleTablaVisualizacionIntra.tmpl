<script type="text/javascript" language="javascript">
    $("#enable_sort_subcampo").change(function(){
        if($(this).is(':checked')){
            $("#sortable_subcampo").sortable({
            stop: function(event, ui) {
                actualizarOrdenSubCampos($('#sortable').sortable('toArray'));
            }
        });
        }
    });
</script>
